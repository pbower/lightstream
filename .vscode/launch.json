{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Rust Test Binary",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/deps/<test-binary-name>",
        "args": ["--exact", "<test_name>", "--nocapture"],
        "cwd": "${workspaceFolder}",
        "stopOnEntry": false,
        "sourceLanguages": ["rust"]
      }
    ]
  }
  